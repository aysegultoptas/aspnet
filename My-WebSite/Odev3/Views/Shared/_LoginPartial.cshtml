@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">
    <li>
        @Html.ActionLink(Odev3.Kaynaklar.dili.merhaba + " " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
    </li>  &nbsp;&nbsp;&nbsp;
    <li><a href="javascript:document.getElementById('logoutForm').submit()">@Odev3.Kaynaklar.dili.oturumkapa</a></li>
</ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li>@Html.ActionLink(Odev3.Kaynaklar.dili.kaydol, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <li>@Html.ActionLink(Odev3.Kaynaklar.dili.oturumac, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
</ul>
}
